                    </view>
                </view>
            </view> -->

            </view>
        </view>



        <view class="cu-load bg-gray loading" hidden='{{isShowLoadmore}}'> </view>
        <view class="cu-load bg-gray over" hidden='{{!isShowLoadmore}}'> </view>

    </view>

    <!--表白-->
    <view hidden="{{currentTab!==1}}">
        表白模块
    </view>

    <!--求助-->
    <view hidden="{{currentTab!==2}}">
        求助模块
    </view>
